<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_view_task"
            style="@style/styleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="20sp"
            android:layout_marginRight="4dp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_task_padding"
                android:background="@color/Blue"
                android:orientation="vertical" >

                <com.android.grsu.numbersgame.view.DraggableButton
                    android:id="@+id/button0"
                    style="@style/styleButton"
                    android:background="@drawable/b0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_task_padding"
                android:background="@color/Aqua"
                android:orientation="vertical" >

                <com.android.grsu.numbersgame.view.DraggableButton
                    android:id="@+id/button1"
                    style="@style/styleButton"
                    android:background="@drawable/b1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_task_padding"
                android:background="@color/Green"
                android:orientation="vertical" >

                <com.android.grsu.numbersgame.view.DraggableButton
                    android:id="@+id/button2"
                    style="@style/styleButton"
                    android:background="@drawable/b2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_task_padding"
                android:background="@color/Yellow"
                android:orientation="vertical" >

                <com.android.grsu.numbersgame.view.DraggableButton
                    android:id="@+id/button3"
                    style="@style/styleButton"
                    android:background="@drawable/b3" />
            </LinearLayout>
        </TableRow>

        <TableRow android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_task_padding"
                android:background="@color/Violet"
                android:orientation="vertical" >

                <com.android.grsu.numbersgame.view.DraggableButton
                    android:id="@+id/button4"
                    style="@style/styleButton"
                    android:background="@drawable/b4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_task_padding"
                android:background="@color/Red"
                android:orientation="vertical" >

                <com.android.grsu.numbersgame.view.DraggableButton
                    android:id="@+id/button5"
                    style="@style/styleButton"
                    android:background="@drawable/b5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_task_padding"
                android:background="@color/Orange"
                android:orientation="vertical" >

                <com.android.grsu.numbersgame.view.DraggableButton
                    android:id="@+id/button6"
                    style="@style/styleButton"
                    android:background="@drawable/b6" />
            </LinearLayout>
        </TableRow>

        <TableRow android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_task_padding"
                android:background="@color/GreenYellow"
                android:orientation="vertical" >

                <com.android.grsu.numbersgame.view.DraggableButton
                    android:id="@+id/button7"
                    style="@style/styleButton"
                    android:background="@drawable/b7" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_task_padding"
                android:background="@color/BlueViolet"
                android:orientation="vertical" >

                <com.android.grsu.numbersgame.view.DraggableButton
                    android:id="@+id/button8"
                    style="@style/styleButton"
                    android:background="@drawable/b8" />
            </LinearLayout>
        </TableRow>

        <TableRow android:gravity="center" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_view_task_padding"
                android:background="@color/Gray"
                android:orientation="vertical" >

                <com.android.grsu.numbersgame.view.DraggableButton
                    android:id="@+id/button9"
                    style="@style/styleButton"
                    android:background="@drawable/b9" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/text_view_results"
        style="@style/styleText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>